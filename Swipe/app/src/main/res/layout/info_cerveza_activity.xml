<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.InfoCervezaActivity">

    <TextView
        android:text="Información de la cerveza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/nombreResultado"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/descripcionResultado"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduación:"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/graduacionResultado"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Es malta:"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/maltaResultado"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lúpulo:"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/lupuloResultado"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estilo:"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/estiloResultado"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />
    </GridLayout>

    <Button
        android:id="@+id/btn_atras"
        android:text="Atrás"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:textSize="30sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:onClick="atras"/>

</GridLayout>